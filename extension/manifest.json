{
    "manifest_version": 3,
    "name": "OLX Car Finder",
    "version": "1.0.0",
    "description": "Monitor OLX searches and get alerts for new car listings",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://*.olx.com.br/*",
        "http://localhost:8787/*",
        "https://olx-car-finder.dyonathan.workers.dev/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}